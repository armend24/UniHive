@model List<UniHive.Models.UserViewModel>

    @{
        ViewData["Title"] = "Manage Users";
    }

    <a asp-action="Add" class="btn btn-success mb-3"> Add New User</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th> ID </th>
                <th> Full Name </th>
                <th> Username </th>
                <th> Role </th>
                <th> IsActive </th>
                <th> Actions </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FullName</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>@user.IsActive</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
        }
        </tbody>

    </table>